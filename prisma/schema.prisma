generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Arch {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  img         String[]
  category    String
}

model Real {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price String
  location String 
  img         String[] 
  category String
  type String
  bed String
  bath String
  size String
  condition String
  floor String
  amenities String[]
  age String
  ref String
  date        DateTime @default(now()) @db.Date
}

model Brand {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  img         String[] 
}
model Const {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  img         String[] 
}


model Bung {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  img         String[] 
}
